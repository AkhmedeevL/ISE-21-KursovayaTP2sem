<Window x:Class="CustomerInterface.FormOrders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerInterface"
        mc:Ignorable="d"
         Title="Мои заказы" Height="351" Width="480">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <DataGrid x:Name="dataGridViewOrders" HorizontalAlignment="Left" Height="312" VerticalAlignment="Top" Width="350" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" IsReadOnly="True" SelectionMode="Single"/>
        <Button x:Name="buttonAdd" Content="Добавить" HorizontalAlignment="Left" Margin="365,25,0,0" VerticalAlignment="Top" Width="99" Click="buttonAdd_Click" Height="22"/>
        <Button x:Name="buttonDel" Content="Удалить" HorizontalAlignment="Left" Margin="365,121,0,0" VerticalAlignment="Top" Width="99" Click="buttonDel_Click" Height="22"/>
        <Button x:Name="buttonUpd" Content="Изменить" HorizontalAlignment="Left" Margin="365,73,0,0" VerticalAlignment="Top" Width="99" Click="buttonUpd_Click" Height="22"/>
    </Grid>
</Window>
